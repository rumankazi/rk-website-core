{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "timezone": "Europe/Amsterdam",
  "schedule": ["before 6am on Monday"],
  "labels": ["dependencies", "renovate"],
  "assignees": ["rumankazi"],
  "reviewers": ["rumankazi"],
  "packageRules": [
    {
      "description": "Group all non-major dependencies",
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "all non-major dependencies",
      "groupSlug": "all-minor-patch",
      "automerge": true
    },
    {
      "description": "Group React ecosystem updates",
      "groupName": "React ecosystem",
      "groupSlug": "react-ecosystem",
      "matchPackageNames": ["/^react/", "/^@types/react/"]
    },
    {
      "description": "Group Next.js and related packages",
      "groupName": "Next.js ecosystem",
      "groupSlug": "nextjs-ecosystem",
      "matchPackageNames": ["/^next/", "/^@next//", "/eslint-config-next/"]
    },
    {
      "description": "Group TypeScript and related packages",
      "groupName": "TypeScript ecosystem",
      "groupSlug": "typescript-ecosystem",
      "matchPackageNames": [
        "/^typescript/",
        "/^@typescript-eslint//",
        "/^@types//"
      ]
    },
    {
      "description": "Group testing packages",
      "groupName": "Testing packages",
      "groupSlug": "testing-packages",
      "matchPackageNames": [
        "/^@testing-library//",
        "/^@playwright//",
        "/^vitest/",
        "/^@vitest//",
        "/playwright/",
        "/jsdom/"
      ]
    },
    {
      "description": "Group linting and formatting packages",
      "groupName": "Linting and formatting",
      "groupSlug": "linting-formatting",
      "matchPackageNames": [
        "/^eslint/",
        "/^@eslint//",
        "/^prettier/",
        "/prettier-plugin-/"
      ],
      "automerge": true
    },
    {
      "description": "Group Prisma packages",
      "groupName": "Prisma ORM",
      "groupSlug": "prisma-orm",
      "matchPackageNames": ["/^prisma/", "/^@prisma//"]
    },
    {
      "description": "Group Auth.js packages",
      "groupName": "Auth.js",
      "groupSlug": "auth-js",
      "matchPackageNames": ["/^next-auth/", "/^@auth//"]
    },
    {
      "description": "Group Tailwind CSS packages",
      "groupName": "Tailwind CSS ecosystem",
      "groupSlug": "tailwind-ecosystem",
      "matchPackageNames": [
        "/^tailwindcss/",
        "/^@tailwindcss//",
        "/tailwind-/",
        "/^autoprefixer/",
        "/^postcss/"
      ]
    },
    {
      "description": "Group Radix UI packages",
      "groupName": "Radix UI components",
      "groupSlug": "radix-ui",
      "matchPackageNames": ["/^@radix-ui//"]
    },
    {
      "description": "Group build and dev tools",
      "groupName": "Build and dev tools",
      "groupSlug": "build-dev-tools",
      "matchPackageNames": [
        "/^@vitejs//",
        "/^vite/",
        "/^tsx/",
        "/^semantic-release/",
        "/^@semantic-release//",
        "/^husky/",
        "/^lint-staged/",
        "/^@commitlint//"
      ]
    }
  ],
  "major": {
    "dependencyDashboard": true,
    "minimumReleaseAge": "3 days"
  },
  "vulnerabilityAlerts": {
    "labels": ["security", "priority-high"],
    "assignees": ["rumankazi"]
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 6am on Monday"],
    "automerge": true
  },
  "prHourlyLimit": 3,
  "prConcurrentLimit": 5,
  "branchConcurrentLimit": 10
}
